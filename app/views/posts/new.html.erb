<div class="main back">
 <div class="post-new">
    <div class="user-show-header">
        <div class="name-follow">
          <h2><%=@user.name%></h2>
          <% unless current_user == @user %>
            <% if current_user.following?(@user) %>
              <%=link_to "Unfollow", destroy_relationship_path(@user.id),method: :delete%>
          <% else %>
              <%=link_to "Follow", create_relationship_path(@user.id),method: :post%>
            <% end %>
          <% end %>
        </div>
      <p>フォロー中 <%=@followings.count%></p>
      <p>フォロワー <%=@followers.count%></p>
    </div>
 <div class="post-new-container">
  <h1>新しいチャレンジを始める</h1>
  <%= form_for @post do |f| %>
    <%@post.errors.full_messages.each do |m|%>
      <div class="error">
        <%= m %>
      </div>
    <%end%>
  <div class="field">
    <p>チャレンジ:</p>
    <%= f.text_field :body, :size => 140 %>
  </div>
  <i class="fas fa-arrow-right"></i>
  <%= f.submit "スタート" %>
  <% end %>
<%= link_to "チャレンジ一覧に戻る", posts_path%>
  </div>
  </div>
</div>